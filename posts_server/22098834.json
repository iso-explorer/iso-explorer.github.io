o_22098834_22098970_0": {"section_id": 8703, "quality": 0.9272727272727272, "length": 51}, "so_22098834_22098970_4": {"section_id": 8702, "quality": 0.5454545454545454, "length": 6}, "so_22098834_22098834_0": {"section_id": 7352, "quality": 1.0, "length": 19}, "so_22098834_22098970_9": {"section_id": 3979, "quality": 1.0, "length": 6}, "so_22098834_22098970_1": {"section_id": 7687, "quality": 1.0, "length": 5}, "so_22098834_22098970_3": {"section_id": 8539, "quality": 0.75, "length": 6}, "so_22098834_22098970_5": {"section_id": 8703, "quality": 0.8333333333333334, "length": 5}, "so_22098834_22098970_11": {"section_id": 3979, "quality": 1.0, "length": 5}, "so_22098834_22098970_2": {"section_id": 8702, "quality": 0.9, "length": 9}}}});